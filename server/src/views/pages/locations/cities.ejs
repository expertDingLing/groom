                                                <th> Date </th>
                                                <th> Action </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for( let i = 0; i < 30; i++ ) { %>
                                                <tr class="odd gradeX">
                                                    <!-- <td>
                                                        <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                            <input type="checkbox" class="checkboxes" value="1" />
                                                            <span></span>
                                                        </label>
                                                    </td> -->
                                                    <td> New York </td>
                                                    <td> 2020/9/10 </td>
                                                    <td> <span class="label label-sm label-success"> Active </span> </td>
                                                    <td> <button type="button" class="btn custom btn-outline btn-edit">Edit</button> </td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- END CITIES TABLE PORTLET-->
                        </div>
                    </div>
                </div>
                <!-- END CONTENT BODY -->
            </div>
            <!-- END CONTENT -->
        </div>
        <!-- END CONTAINER -->

        <%- include('../../layouts/global_script.ejs')  %>
        <%- include('../../layouts/theme_script.ejs')  %>
        <!-- PAGE LEVEL PLUGINS -->
        <script src="/assets/global/scripts/datatable.min.js" type="text/javascript"></script>
        <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
        <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
        <!-- PAGE LEVEL SCRIPTS -->
        <script src="/assets/layout/scripts/table-datatables-managed.min.js" type="text/javascript"></script>
